{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "node",
            "jasmine"
        ],
        "mapRoot": "./",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "paths": {
            "@angular/*": [ "../node_modules/@angular/*"]
        }

    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
